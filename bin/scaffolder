#!/usr/bin/env ruby
$LOAD_PATH.unshift(File.join(File.dirname(__FILE__), '..', 'lib'))

require 'rubygems'
require 'configliere'
require 'scaffolder/tool_index'

extend Scaffolder::ToolIndex

Settings.use :commandline
Settings.resolve!

tool, arguments = determine_tool(Settings)
tool.new(arguments).run
